  <!-- Framework Comparison -->
  <h2>üîç React vs Vue: Framework Comparison</h2>
  <table>
    <tr>
      <th>Feature</th>
      <th>React</th>
      <th>Vue</th>
    </tr>
    <tr>
      <td>Architecture</td>
      <td>Component-based, library (focus on UI)</td>
      <td>Component-based, full framework (MVVM pattern)</td>
    </tr>
    <tr>
      <td>Learning Curve</td>
      <td>Steeper (JSX, more setup)</td>
      <td>Gentle (HTML, CSS, JS separation)</td>
    </tr>
    <tr>
      <td>State Management</td>
      <td>Uses libraries like Redux, Context API</td>
      <td>Built-in reactivity system, Vuex (optional)</td>
    </tr>
    <tr>
      <td>Use Cases</td>
      <td>Large-scale applications, SPAs</td>
      <td>Small to medium apps, quick prototyping</td>
    </tr>
    <tr>
      <td>Community & Ecosystem</td>
      <td>Very large and mature</td>
      <td>Growing steadily, strong in Asia</td>
    </tr>
  </table>

  <!-- JavaScript for Real-Time Clock -->
  <script>
    function updateClock() {
      const now = new Date();
      const timeString = now.toLocaleTimeString();
      document.getElementById('clock').textContent = timeString;
    }

    // Initial call and interval setup
    updateClock();
    setInterval(updateClock, 1000);
  </script>

